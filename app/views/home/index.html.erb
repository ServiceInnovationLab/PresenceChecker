<!DOCTYPE html>
<html>
  <head>
    <title>ReactOnRailsWithWebpacker</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello-world-bundle' %>
  </head>

  <body>
    <%= render partial: 'header' %>
    <div class="container">
        <header class="main">
          <h1>Presence results</h1>
        </header>
        <div class="well">
          <span>
            <b>Passport no.</b>
            <input type="text">
            <button class="btn success">Search</button>
            <button class="btn default">Clear</button>
          </span>
        </div>


        <%# results %>
          <%= react_component("Identity", props: {
            id:"123456",
            identities:[
              {id:"88568",firstName:"John",middleName:"Foo",thirdName:"Max",lastName:"Doe",cob:"United States",dob:"17/Jan/1920",gender:"Male",nationality:"American"},
              {id:"45490",firstName:"James",middleName:"Bar",thirdName:"",lastName:"Doe",cob:"United States",dob:"17/Jan/1920",gender:"Male",nationality:"American"}
          ]
          }) %>
        <%# known identities %>

        <%= react_component("EligibilityDates", props: {
          eligibleDateRanges:[
            {start:"Dec 17 2018", end:"Jan 13 2019"},
            {start:"Feb 17 2019", end:"April 13 2019"},
            {start:"Jun 11 2019", end:"Jul 3 2019"},
          ]
        }) %>
   

        <%= yield %>
    </div>

  </body>
</html>
