<p id="notice"><%= notice %></p>

<h1>Identities</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Second name</th>
      <th>Third name</th>
      <th>Date of birth</th>
      <th>Country of birth</th>
      <th>Identity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.first_name %></td>
        <td><%= identity.last_name %></td>
        <td><%= identity.second_name %></td>
        <td><%= identity.third_name %></td>
        <td><%= identity.date_of_birth %></td>
        <td><%= identity.country_of_birth %></td>
        <td><%= identity.identity %></td>
        <td><%= link_to 'Show', identity %></td>
        <td><%= link_to 'Edit', edit_identity_path(identity) %></td>
        <td><%= link_to 'Destroy', identity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

