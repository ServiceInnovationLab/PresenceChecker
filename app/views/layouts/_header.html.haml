.main-menu.list-stripped
  .container
    %ul
      - if user_signed_in?
        %li= link_to('Home', root_path)
        %li= link_to('Users', users_path)
        %li.right
          = link_to('Logout', destroy_user_session_path, method: :delete)
        %li.right
